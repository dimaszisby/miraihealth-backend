{
  "compilerOptions": {
    "target": "ES2020", // Specify ECMAScript target version
    "module": "commonjs", // Specify module code generation
    "baseUrl": ".", // Base directory to resolve non-relative module names
    "paths": {
      // Define path aliases for cleaner imports
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@models/*": ["src/models/*"],
      "@middleware/*": ["src/middleware/*"],
      "@routes/*": ["src/routes/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@tests/*": ["tests/*"]
    },
    "checkJs": false, // Enable type checking on JavaScript files
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON modules
    "noEmit": true, // Do not emit compiled JavaScript files
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true // Skip type checking of all declaration files
  },
  "include": [
    "src/server.ts",
    "src/controllers/**/*.js",
    "src/models/**/*.js",
    "src/routes/**/*.js",
    "src/middleware/**/*.js",
    "src/config/**/*.js",
    "src/utils/**/*.js",
    "tests/**/*.js",
    "src/config/config.ts"
, "src/utils/response-formatter.ts", "src/utils/redis-client.ts", "src/utils/logger.ts", "src/utils/catch-async.ts", "src/config/db.ts", "src/utils/AppError.ts", "src/routes/auth-routes.ts"  ],
  "exclude": ["node_modules", "dist", "src/migrations", "seeders"]
}
