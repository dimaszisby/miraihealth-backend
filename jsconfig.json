{
  "compilerOptions": {
    "target": "ES2020", // Specify ECMAScript target version
    "module": "commonjs", // Specify module code generation
    "baseUrl": ".", // Base directory to resolve non-relative module names
    "paths": {
      // Define path aliases for cleaner imports
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@middleware/*": ["middleware/*"],
      "@routes/*": ["routes/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@tests/*": ["tests/*"]
    },
    "checkJs": false, // Enable type checking on JavaScript files
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON modules
    "noEmit": true, // Do not emit compiled JavaScript files
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true // Skip type checking of all declaration files
  },
  "include": [
    "server.js",
    "controllers/**/*.js",
    "models/**/*.js",
    "routes/**/*.js",
    "middleware/**/*.js",
    "config/**/*.js",
    "utils/**/*.js",
    "tests/**/*.js"
  ],
  "exclude": ["node_modules", "dist", "migrations", "seeders"]
}
